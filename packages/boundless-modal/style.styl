.b-modal-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: auto;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
}

.b-modal-wrapper .b-dialog-wrapper {
    flex-shrink: 0;
    max-width: 80vw;
    position: relative;
}

.b-modal-mask {
    background: background-Modal_mask;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
