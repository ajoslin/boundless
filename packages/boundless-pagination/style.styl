.b-pagination-controls .b-pagination-control {
    background: background-Pagination_control;
    border-color: borderColor-Pagination_control;
    color: color-Pagination_control;
}

.b-pagination-controls .b-pagination-control:not(.b-segmented-control-option-selected):focus {
    background: background-Pagination_control-focus;
    color: color-Pagination_control-focus;
}

.b-pagination-controls .b-segmented-control-option-selected {
    background: background-Pagination_control-selected;
    color: color-Pagination_control-selected;
}

.b-pagination .b-pagination-item {
    display: flex;
}

.b-pagination-item-loading {
    position: relative;
}

.b-pagination-item-loading::before,
.b-pagination-item-loading::after {
    content: '';
    position: absolute;
    top: 50%;
    margin-top: -5px;
    left: 50%;
    margin-left: -5px;
    height: 10px;
    width: 10px;
    border-radius: 100%;
    background: background-Pagination_item-loading;
}

.b-pagination-item-loading::before {
    animation: loaderBefore 0.7s ease-in-out alternate infinite;
}

.b-pagination-item-loading::after {
    animation: loaderAfter 0.7s ease-in-out alternate infinite;
}

@keyframes loaderBefore {
    from {
        left: 50%;
    }

    to {
        left: 49%;
    }
}

@keyframes loaderAfter {
    from {
        left: 50%;
    }

    to {
        left: 51%;
    }
}
