.ui-pagination-item {
    padding: 1rem;
    height: 7em;
    display: flex;
}

.ui-pagination-item-odd {
    background: rgba(color-accent, 0.1);
}

.ui-pagination .ui-pagination-item {
    margin: 0;
}

.ui-pagination-item > .card-left {
    flex-basis: 50%;
}

.ui-pagination-item > .card-right {
    flex-basis: 50%;
    font-size: 11pt;
}

.ui-pagination-item > .card-left > strong {
    font-size: 18pt;
}
