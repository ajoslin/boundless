.b-pagination-item {
    padding: 1rem;
    height: 7em;
    display: flex;
}

.b-pagination-item + .b-pagination-item {
    border-top: 1px solid color-neutral-dark;
}

.b-pagination .b-pagination-item {
    margin: 0;
}

.b-pagination-item > .card-left {
    flex-basis: 50%;
}

.b-pagination-item > .card-right {
    flex-basis: 50%;
    font-size: 11pt;
}

.b-pagination-item > .card-left > strong {
    font-size: 18pt;
}
