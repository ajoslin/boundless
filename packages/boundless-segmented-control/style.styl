.b-segmented-control {
    display: flex;
    flex-shrink: 0;
    justify-content: center;
}

.b-segmented-control .b-segmented-control-option {
    align-self: stretch;
    background: background-SegmentedControl_option;
    border: 1px solid borderColor-SegmentedControl_option;
    border-radius: 0;
    color: color-SegmentedControl_option;
    cursor: pointer;
    flex-grow: 1;
    font-size: 14px;
    margin: 0;
    padding: 0.5rem 0.75rem;
    text-align: center;
    white-space: nowrap;

    transition: all 200ms ease;
}

.b-segmented-control .b-segmented-control-option:not(:first-of-type) {
    margin-left: -1px;
}

.b-segmented-control .b-segmented-control-option:first-of-type {
    border-top-left-radius: borderRadius;
    border-bottom-left-radius: borderRadius;
}

.b-segmented-control .b-segmented-control-option:last-of-type {
    border-top-right-radius: borderRadius;
    border-bottom-right-radius: borderRadius;
}

.b-segmented-control .b-segmented-control-option:not(.b-segmented-control-option-selected):hover {
    background: background-SegmentedControl_option-hover;
    color: color-SegmentedControl_option-hover;
}

.b-segmented-control .b-segmented-control-option:not(.b-segmented-control-option-selected):focus {
    background: background-SegmentedControl_option-focus;
    color: color-SegmentedControl_option-focus;
}

.b-segmented-control .b-segmented-control-option-selected {
    background: background-SegmentedControl_option-selected;
    color: color-SegmentedControl_option-selected;
    z-index: 1;
}

.b-segmented-control .b-segmented-control-option:active {
    background: background-SegmentedControl_option-active;
    color: background-SegmentedControl_option-active;
}
