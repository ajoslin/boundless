// Skin-specific styles go here. Demo-specific styles go in demo/style.styl.

.b-typeahead-wrapper {
    font-size: fontSize-input;
    position: relative;
}

.b-typeahead-hint + .b-input-wrapper .b-input-placeholder {
    background: transparent;
}

.b-typeahead-match-wrapper {
    background: background-Typeahead_match_wrapper;
    border-bottom-left-radius: borderRadius;
    border-bottom-right-radius: borderRadius;
    box-shadow: boxShadow-Typeahead_match_wrapper;
    margin-top: -1px;
    max-height: 300px;
    overflow: hidden;
    overflow-y: auto;
    position: absolute;
    left: 0;
    right: 0;
    top: 100%;
    z-index: 99;
}

.b-typeahead-match {
    color: color-Typeahead_match;
    cursor: pointer;
    font-size: 13px;
    line-height: 1;
    padding: 0.25em 0.5em;
}

.b-typeahead-match:hover {
    background: background-Typeahead_match-hover;
    color: color-Typeahead_match-hover;

    .b-typeahead-match-highlight {
        background: background-Typeahead_match_highlight-hover;
        color: color-Typeahead_match-hover-highlight;
        font-weight: bolder;
    }
}

.b-typeahead-match-selected,
.b-typeahead-match-selected:hover {
    background: background-Typeahead_match-selected;
    color: color-Typeahead_match-selected;

    .b-typeahead-match-highlight {
        background: background-Typeahead_match_highlight-selected-hover;
        color: color-Typeahead_match_highlight-selected-hover;
        font-weight: bolder;
    }
}

.b-typeahead-match-highlight {
    background: background-Typeahead_match_highlight;
    color: color-Typeahead_match-highlight;
    font-weight: bolder;
}

.b-typeahead-match-selected .b-typeahead-match-highlight {
    background: background-Typeahead_match_highlight-selected;
    color: color-Typeahead_match_highlight-selected;
}
