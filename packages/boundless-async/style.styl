@keyframes loaderBefore {
    from {
        left: 50%;
    }

    to {
        left: 49%;
    }
}

@keyframes loaderAfter {
    from {
        left: 50%;
    }

    to {
        left: 51%;
    }
}

.b-async-loading {
    position: relative;
}

.b-async-loading::before,
.b-async-loading::after {
    content: '';
    position: absolute;
    top: 50%;
    margin-top: -5px;
    left: 50%;
    margin-left: -5px;
    height: 10px;
    width: 10px;
    border-radius: 100%;
    background: background-Pagination_item-loading;
}

.b-async-loading::before {
    animation: loaderBefore 0.7s ease-in-out alternate infinite;
}

.b-async-loading::after {
    animation: loaderAfter 0.7s ease-in-out alternate infinite;
}
