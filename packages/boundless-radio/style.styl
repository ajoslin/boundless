.b-radio-wrapper {
    display: flex;
}

.b-radio,
.b-radio-label {
    cursor: pointer;
}

.b-radio {
    appearance: none;
    background: background-Radio;
    border: 1px solid borderColor-Radio;
    border-radius: 50%;
    flex-shrink: 0;
    margin: 1px 3px 0;
    padding: 0;
    height: 16px;
    width: 16px;

    transition: border-color 200ms ease;
}

.b-radio:hover {
    background: background-Radio-hover;
    border-color: borderColor-Radio-hover;
}

.b-radio:focus {
    background: background-Radio-focus;
    border-color: borderColor-Radio-focus;
}

.b-radio-selected,
.b-radio-selected:hover,
.b-radio-selected:focus,
.b-radio-selected:active {
    background: background-Radio-selected;
    box-shadow: 0 0 0 2px boxShadowColor-Radio-selected inset;
}

.b-radio-label {
    line-height: 1.2;
    margin-left: 0.25em;
}
