.b-table-cell[data-column="id"] {
    min-width: 100px;
}

.extra-spooky-column,
.extra-unusual-column {
    align-items: center;
    cursor: pointer;
    display: flex;
    position: absolute;
    top: 5px;
    bottom: 5px;
    right: 15px;
}

.extra-unusual-column {
    right: 40px;
}

.b-offscreen {
    position: absolute !important;
    height: 1px; width: 1px;
    overflow: hidden;
    clip: rect(1px, 1px, 1px, 1px);
}
