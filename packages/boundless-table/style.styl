html {
    font-family: sans-serif;
}

html,
body {
    height: 100%;
}

body {
    margin: 0;
}

color-accent ?= cornflowerblue
color-body ?= #111
color-neutral-light ?= #CCC
color-neutral-dark ?= #444

background-UITable_column_resize_handle ?= get_contrasting_color(background-UITable_header)
background-UITable_header ?= #FFF
background-UITable_row-even ?= rgba(color-accent, 0.025)
background-UITable_row-loading ?= halve_alpha(color-accent)
background-UITable_row-odd ?= rgba(color-accent, 0.075)
background-UITable_row-active ?= rgba(color-accent, 0.25)
background-UITable_scroll_handle ?= color-accent
background-UITable_scroll_track ?= lighten(color-accent, 75%)
color-UITable_header ?= get_contrasting_color(background-UITable_header)
color-UITable_row-even ?= color-body
color-UITable_row-active ?= color-body
color-UITable_row-odd ?= color-body
height-UITable_cell ?= 40px
paddingX-UITable_cell ?= 0.75em
size-UITable_scroll_track ?= 8px
size-UITable_scroll_track-expanded ?= 12px

halve_alpha(color) {
    return rgba(color, 0.5)
}

get_contrasting_color(color) {
    luminance = 1 - ( 0.299 * red(color) + 0.587 * green(color) + 0.114 * blue(color) ) / 255

    if (luminance < 0.5) {
        return #000
    } else {
        return #FFF
    }
}

.b-table-wrapper,
.b-table-wrapper * {
    box-sizing: border-box;
}

.b-table-wrapper {
    overflow: hidden;
    position: relative;
    height: 100%;
    width: 100%;
    white-space: nowrap;
}

.b-table-header,
.b-table-body,
.b-table-row {
    backface-visibility: hidden;
    will-change: transform;
}

.b-table-header {
    border-bottom: 1px solid color-accent;
    position: relative;
    z-index: 1;
}

.b-table-header,
.b-table-row {
    position: absolute;
}

.b-table-body {
    position: absolute;
    top: height-UITable_cell;
    bottom: 0;
    transform: translate3d(0, 0, 0);
}

.b-table-row,
.b-table-cell {
    height: height-UITable_cell;
    line-height: height-UITable_cell;
}

.b-table-row {
    position: absolute;
    top: 0;
    left: 0;
    transform: translate3d(0, 0, 0);
    overflow: hidden;
}

.b-table-row-even {
    background: background-UITable_row-even;
    color: color-UITable_row-even;
}

.b-table-row-odd {
    background: background-UITable_row-odd;
    color: color-UITable_row-odd;
}

@keyframes indeterminate {
  0%        {transform: translateX(-100%) scaleX(0.2)}
  20%       {transform: translateX(-40%) scaleX(0.2)}
  30%       {transform: translateX(0%) scaleX(0.5)}
  55%       {transform: translateX(100%) scaleX(0.7)}
  55.99%    {transform: scaleX(0)}
  56%       {transform: translateX(-100%) scaleX(0)}
  56.99%    {transform: translateX(-100%) scaleX(0.6)}
  75%       {transform: translateX(-5%) scaleX(0.6)}
  85%       {transform: translateX(30%) scaleX(0.3)}
  98%       {transform: translateX(100%) scaleX(0.2)}
  99.99%    {transform: scaleX(0)}
  100%      {transform: translateX(-100%)}
}

.b-table-row-loading::before {
   content: '';
   position: absolute;
   top: 50%;
   margin-top: -1px;
   left: 0;
   height: 2px;
   width: 100%;
   background: background-UITable_row-loading;
   z-index: 1;

   animation: indeterminate 2s linear infinite;
}

.b-table-row-active {
    background: background-UITable_row-active;
    color: color-UITable_row-active;
}

.b-table-cell {
    display: inline-block;
    vertical-align: top;
    max-width: 500px;
    min-width: 50px;
    padding: 0 paddingX-UITable_cell;
    position: relative;
    user-select: none;
}

.b-table-cell-inner {
    overflow: hidden;
    text-overflow: ellipsis;
    will-change: contents;
    height: height-UITable_cell;
}

.b-table-header-cell {
    background: background-UITable_header;
    color: color-UITable_header;
}

.b-table-header-cell .b-table-cell-inner {
    right: paddingX-UITable_cell + 0.5em;
}

.b-table-header-cell:hover .b-table-header-cell-resize-handle {
    opacity: 1;
}

.b-table-header-cell-resize-handle {
    border-right: 2px dotted background-UITable_column_resize_handle;
    cursor: col-resize;
    opacity: 0;
    position: absolute;
    top: 5px;
    bottom: 5px;
    right: 5px;
    width: 5px;
    transition: opacity 200ms ease;
}

.b-table-x-scroll-track,
.b-table-y-scroll-track {
    background: background-UITable_scroll_track;
    cursor: move;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transition-duration: 200ms;
    transition-timing: ease;
    z-index: 2;
}

.b-table-x-scroll-track {
    height: size-UITable_scroll_track;
    top: auto;
    transition-property: height;
}

.b-table-x-scroll-track:hover {
    height: size-UITable_scroll_track-expanded;
}

.b-table-y-scroll-track {
    width: size-UITable_scroll_track;
    left: auto;
    transition-property: width;
}

.b-table-y-scroll-track:hover {
    width: size-UITable_scroll_track-expanded;
}

.b-table-x-scroll-handle,
.b-table-y-scroll-handle {
    backface-visibility: hidden;
    background-color: background-UITable_scroll_handle;
    position: absolute;
}

.b-table-x-scroll-handle {
    top: 0;
    bottom: 0;
}

.b-table-y-scroll-handle {
    left: 0;
    right: 0;
}

