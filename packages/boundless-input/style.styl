.b-input-wrapper {
    font-size: fontSize-input;
    position: relative;
    width: 100%;
}

.b-input {
    appearance: none;
    background: background-Input;
    border: 1px solid borderColor-Input;
    border-radius: borderRadius;
    font-family: inherit;
    font-size: inherit;
    font-weight: inherit;
    line-height: inherit;
    margin: 0;
    padding: 0.75em;
    width: 100%;
}

.b-input {
    position: relative;
    z-index: 1;

    transition: border-color 200ms ease;
}

.b-input:hover {
    border-color: borderColor-Input-hover;
}

.b-input:focus {
    border-color: borderColor-Input-focus;
}

.b-input-placeholder {
    color: color-Input_placeholder;
    border-color: transparent;
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.b-input-placeholder + .b-input {
    background: transparent;
}
