// Skin-specific styles go here. Demo-specific styles go in demo/style.styl.

.b-progress-wrapper {
    border: 1px solid borderColor-Progress;
    border-radius: borderRadius;
    height: 30px;
    overflow: hidden;
    position: relative;
}

.b-progress {
    background: background-Progress;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
}

.b-progress-label {
    color: color-Progress;
    line-height: 28px;
    padding-left: 10px;
    position: relative;
    text-align: left;
    z-index: 1;
}

@keyframes interdeterminate-progress-bar {
    from { opacity: 0; }
    to { opacity: 1; }
}

.b-progress-indeterminate {
    background: background-Progress;
    border-radius: 0;
    right: 0;
    opacity: 0.25;
    animation: interdeterminate-progress-bar 2.5s ease-in-out alternate infinite;
}
