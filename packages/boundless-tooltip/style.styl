// Skin-specific styles go here. Demo-specific styles go in demo/style.styl.

.b-tooltip {
    position: relative;
}

.b-tooltip::before {
    background: background-Tooltip;
    color: color-Tooltip;
    padding: 0.25rem 0.5rem;
    position: absolute;
    z-index: 1;
}

.b-tooltip::after {
    border: 5px solid transparent;
    position: absolute;
    z-index: 1;
}

.b-tooltip:hover::before {
    content: attr(data-tooltip);
}

.b-tooltip:hover::after {
    content: '';
}

.b-tooltip-position-above::before {
    bottom: 100%;
    margin-bottom: 0.5rem;
}

.b-tooltip-position-above::after {
    border-top-color: background-Tooltip_arrow;
    bottom: 100%;
    left: 10px;
    margin-bottom: -2px;
}

.b-tooltip-position-below::before {
    top: 100%;
    margin-top: 0.5rem;
}

.b-tooltip-position-below::after {
    border-bottom-color: background-Tooltip_arrow;
    top: 100%;
    left: 10px;
    margin-top: -2px;
}

.b-tooltip-position-before::before {
    right: 100%;
    margin-right: 0.5rem;
}

.b-tooltip-position-before::after {
    border-left-color: background-Tooltip_arrow;
    right: 100%;
    top: 10px;
    margin-right: -2px;
}

.b-tooltip-position-after::before {
    left: 100%;
    margin-left: 0.5rem;
}

.b-tooltip-position-after::after {
    border-right-color: background-Tooltip_arrow;
    left: 100%;
    top: 10px;
    margin-left: -2px;
}
