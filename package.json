{
  "name": "UIKit",
  "description": "Pure, accessible elements for use in React projects.",
  "private": true,
  "version": "0.0.1",
  "author": "Evan Jacobs <evan.jacobs@enigma.io>",
  "dependencies": {
    "react": "~0.13.3"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.15",
    "babelify": "^6.1.2",
    "beefy": "^2.1.5",
    "browserify": "^10.2.4",
    "eslint-plugin-react": "^2.5.0",
    "eslintify": "*",
    "exorcist": "^0.4.0",
    "jsawk": "0.0.2",
    "jsdoc": "git+https://github.com/jsdoc3/jsdoc.git",
    "jsdoc-jsx": "^0.1.0",
    "lodash": "^3.10.0",
    "karma": "^0.12.36",
    "karma-browserify": "^4.2.1",
    "karma-chrome-launcher": "^0.2.0",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.0.2",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-sinon-chai": "^1.0.0",
    "karma-source-map-support": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.5",
    "minami": "^1.1.0",
    "uglify-js": "^2.4.23",
    "watchify": "^3.2.3"
  },
  "browser": {
    "UIKit/UIButton": "./UIButton/index.jsx",
    "UIKit/UICheckbox": "./UICheckbox/index.jsx",
    "UIKit/UICheckboxGroup": "./UICheckboxGroup/index.jsx",
    "UIKit/UIDialog": "./UIDialog/index.jsx",
    "UIKit/UIImage": "./UIImage/index.jsx",
    "UIKit/UIList": "./UIList/index.jsx",
    "UIKit/UIModal": "./UIModal/index.jsx",
    "UIKit/UIPopover": "./UIPopover/index.jsx",
    "UIKit/UIProgress": "./UIProgress/index.jsx",
    "UIKit/UIRadio": "./UIRadio/index.jsx",
    "UIKit/UIText": "./UIText/index.jsx",
    "UIKit/UITypeahead": "./UITypeahead/index.jsx",
    "UIKit/UIView": "./UIView/index.js"
  },
  "browserify": {
    "transform": [
      "eslintify",
      "babelify"
    ]
  },
  "scripts": {
    "postinstall": "touch ~/.jsawkrc && mkdir -p build/js",
    "build": "browserify `cat package.json | jsawk 'return \"-r \" + Object.keys(this.browser).join(\" -r \")' | awk '{$1=\"\"; print $0}'` --colors --debug --no-bundle-external --extension=.jsx | exorcist build/js/bundle.js.map > build/js/bundle.js",
    "start": "beefy index.js:build/js/bundle.js 9200 --colors --live --open -- --debug --extension=.jsx",
    "release": "NODE_ENV=production browserify `cat package.json | jsawk 'return \"-r \" + Object.keys(this.browser).join(\" -r \")' | awk '{$1=\"\"; print $0}'` --colors --no-bundle-external --extension=.jsx | uglifyjs -mc drop_console > build/js/bundle.min.js",
    "test": "karma start",
    "debug": "karma start karma.debug.conf.js",
    "docs": "mkdir -p docs/api && find . -type f -name '*.js' -o -name '*.jsx' | grep -v '\\./\\(node_modules\\|docs\\|build\\)' | xargs jsdoc -d docs/api -c docs/jsdoc.json"
  }
}
