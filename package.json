{
  "name": "UIKit",
  "description": "Pure, accessible elements for use in React projects.",
  "private": true,
  "version": "0.0.1",
  "contributors": [
    "Evan Jacobs <evan.jacobs@enigma.io>"
  ],
  "dependencies": {
    "react": "~0.13.3"
  },
  "devDependencies": {
    "babel-eslint": "^4.0.0",
    "babelify": "^6.1.2",
    "beefy": "^2.1.5",
    "browserify": "^11.0.0",
    "eslint-plugin-react": "^3.0.0",
    "eslintify": "*",
    "jsdoc": "git+https://github.com/jsdoc3/jsdoc.git",
    "karma": "^0.13.0",
    "karma-browserify": "^4.3.0",
    "karma-chrome-launcher": "^0.2.0",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.0",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-sinon-chai": "^1.0.0",
    "karma-source-map-support": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.5",
    "lodash": "^3.10.0",
    "minami": "^1.1.0",
    "pleeease": "^3.4.0",
    "pleeease-cli": "^3.2.8",
    "uglify-js": "^2.4.23",
    "watchify": "^3.2.3"
  },
  "browser": {
    "UIKit/UIButton": "./UIButton/index.jsx",
    "UIKit/UICheckbox": "./UICheckbox/index.jsx",
    "UIKit/UICheckboxGroup": "./UICheckboxGroup/index.jsx",
    "UIKit/UIDialog": "./UIDialog/index.jsx",
    "UIKit/UIImage": "./UIImage/index.jsx",
    "UIKit/UIFittedText": "./UIFittedText/index.jsx",
    "UIKit/UIList": "./UIList/index.jsx",
    "UIKit/UIModal": "./UIModal/index.jsx",
    "UIKit/UIPopover": "./UIPopover/index.jsx",
    "UIKit/UIProgress": "./UIProgress/index.jsx",
    "UIKit/UIRadio": "./UIRadio/index.jsx",
    "UIKit/UITable": "./UITable/index.jsx",
    "UIKit/UITypeaheadInput": "./UITypeaheadInput/index.jsx",
    "UIKit/UIView": "./UIView/index.js"
  },
  "browserify": {
    "transform": [
      "eslintify",
      "babelify"
    ]
  },
  "scripts": {
    "postinstall": "mkdir -p build/js && npm build",
    "build": "npm run build-js",
    "build-css": "pleeease-compile",
    "build-js": "browserify `node -p \"'-r '+Object.keys(require('./package').browser).join(' -r ')\"` --colors --debug --no-bundle-external --extension=.jsx > build/js/bundle.js",
    "start": "npm run start-css & npm run start-js",
    "start-css": "pleeease-watch",
    "start-js": "beefy demo.js:build/js/bundle.js 9300 --colors --live --open --index=demo.html -- --debug --extension=.jsx",
    "release": "NODE_ENV=production browserify `node -p \"'-r '+Object.keys(require('./package').browser).join(' -r ')\"` --colors --no-bundle-external --extension=.jsx | uglifyjs -mc drop_console > build/js/bundle.js",
    "test": "karma start",
    "debug": "karma start karma.debug.conf.js",
    "docs": "mkdir -p docs/sdk && find . -type f \\( -name '*.js' -or -name '*.jsx' \\) -not \\( -path './node_modules/*' -or -path './docs/*' -or -path './build/*' -or -path './*/demo/*' \\) -not -name 'unit.*' -mindepth 2 | xargs jsdoc -d docs/sdk -c docs/jsdoc.json README.md --verbose"
  }
}
