{
  "name": "enigma-uikit",
  "description": "Intuitive, accessible solutions for common UI needs in React.",
  "private": true,
  "version": "0.0.1",
  "contributors": [
    "Evan Jacobs <evan.jacobs@enigma.io>"
  ],
  "dependencies": {
    "classnames": "^2.1.5"
  },
  "devDependencies": {
    "babel-eslint": "^4.0.0",
    "babelify": "^6.1.2",
    "beefy": "^2.1.5",
    "browserify": "^12.0.0",
    "chai": "^3.4.0",
    "es6-promise": "^3.0.2",
    "eslint-plugin-react": "^3.0.0",
    "eslintify": "*",
    "jsdoc": "git+https://github.com/jsdoc3/jsdoc.git",
    "karma": "^0.13.0",
    "karma-browserify": "^4.3.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-chrome-launcher": "^0.2.0",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.0",
    "karma-phantomjs2-launcher": "^0.3.2",
    "karma-source-map-support": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.5",
    "minami": "^1.1.0",
    "mocha": "^2.3.3",
    "pleeease": "^4.0.2",
    "pleeease-cli": "git+https://github.com/yaycmyk/pleeease-cli.git#fix-ignore",
    "sinon": "^1.17.2",
    "uglify-js": "^2.4.23",
    "watchify": "^3.2.3"
  },
  "peerDependencies": {
    "lodash": "^3.10.0",
    "react": "^0.14.0",
    "react-dom": "^0.14.0"
  },
  "browser": {
    "UIKit/UIButton": "./UIButton/index.js",
    "UIKit/UICheckbox": "./UICheckbox/index.js",
    "UIKit/UICheckboxGroup": "./UICheckboxGroup/index.js",
    "UIKit/UIDialog": "./UIDialog/index.js",
    "UIKit/UIImage": "./UIImage/index.js",
    "UIKit/UIFittedText": "./UIFittedText/index.js",
    "UIKit/UIList": "./UIList/index.js",
    "UIKit/UIModal": "./UIModal/index.js",
    "UIKit/UIPopover": "./UIPopover/index.js",
    "UIKit/UIProgress": "./UIProgress/index.js",
    "UIKit/UIProgressiveDisclosure": "./UIProgressiveDisclosure/index.js",
    "UIKit/UIRadio": "./UIRadio/index.js",
    "UIKit/UITable": "./UITable/index.js",
    "UIKit/UITokenizedInput": "./UITokenizedInput/index.js",
    "UIKit/UITypeaheadInput": "./UITypeaheadInput/index.js",
    "UIKit/UIView": "./UIView/index.js"
  },
  "browserify": {
    "transform": [
      "eslintify",
      "babelify"
    ]
  },
  "scripts": {
    "postinstall": "mkdir -p build/js",
    "demo-css": "pleeease-watch",
    "demo-js": "beefy --colors --live --open --index=demo.html --iw --debug demo.js:build/js/bundle.js 9300",
    "demo": "sh parallelize.sh \"pleeease-watch\" \"npm run start-js\"",
    "export-classes": "echo $(node -p \"'-r ' + Object.keys(require('./package').browser).join(' -r ')\")",
    "exclude-peer-deps": "echo $(node -p \"'-x ' + Object.keys(require('./package').peerDependencies).join(' -x ')\")",
    "browserify-config": "echo $(npm run -s export-classes) $(npm run -s exclude-peer-deps)",
    "browserify-standalone-config": "echo $(npm run -s export-classes)",
    "build": "browserify --colors --debug $(npm run -s browserify-config) > build/js/uikit.js",
    "start": "watchify --iw --verbose --colors --debug $(npm run -s browserify-config) -o build/js/uikit.js",
    "release": "NODE_ENV=production browserify --colors $(npm run -s browserify-config) | uglifyjs -mc drop_console > build/js/uikit.min.js",
    "standalone": "NODE_ENV=production browserify --colors $(npm run -s browserify-standalone-config) | uglifyjs -mc drop_console > build/js/uikit-standalone.min.js",
    "test": "karma start",
    "debug": "karma start karma.debug.conf.js",
    "docs": "mkdir -p docs/sdk && find . -type f -name '*.js' -not \\( -path './node_modules/*' -or -path './docs/*' -or -path './build/*' -or -path './*/demo/*' \\) -not -name 'unit.*' -mindepth 2 | xargs jsdoc -d docs/sdk -c docs/jsdoc.json README.md --verbose"
  }
}
