{
  "name": "boundless",
  "description": "Intuitive, accessible solutions for common UI needs in React.",
  "version": "1.0.0",
  "contributors": [
    "Evan Scott <evan.scott@enigma.io>",
    "Abe Rubenstein <abe.rubenstein@enigma.io>",
    "Jenn Creighton <jenn.creighton@enigma.io>"
  ],
  "main": "public/boundless.js",
  "dependencies": {
    "classnames": "^2.1.5"
  },
  "devDependencies": {
    "autoprefixer-stylus": "^0.11.0",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^18.0.0",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-react-docgen": "^1.4.1",
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.11",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babelify": "^7.0.0",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "budo": "^9.2.1",
    "bulkify": "^1.4.2",
    "bundle-collapser": "^1.2.1",
    "codecov": "^1.0.1",
    "coveralls": "^2.11.9",
    "eslint": "^3.7.0",
    "eslint-plugin-react": "^6.3.0",
    "jest-cli": "^18.0.0",
    "lerna": "2.0.0-beta.32",
    "lodash": "^4.6.1",
    "markdown-to-jsx": "^4.0.0",
    "mkdirp": "^0.5.1",
    "prismjs": "^1.4.1",
    "react": "^15.3.0",
    "react-addons-test-utils": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-router": "^2.7.0",
    "rollup": "^0.41.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "sinon": "^1.17.3",
    "stringify": "^5.1.0",
    "stylus": "^0.54.2",
    "through": "^2.3.8",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "peerDependencies": {
    "react": ">= 15.3",
    "react-dom": ">= 15.3"
  },
  "jest": {
    "cacheDirectory": "node_modules/.cache/jest-cli",
    "coverageReporters": [
      "text",
      "cobertura",
      "lcov"
    ],
    "testRegex": "\\.spec\\.js$",
    "transformIgnorePatterns": [
      "/node_modules/(?!boundless).*"
    ]
  },
  "browser": {
    "./exports.js": "./public/boundless.js"
  },
  "browserify-shim": {
    "lodash": "global:_",
    "react": "global:React",
    "react-dom": "global:ReactDOM",
    "react-router": "global:ReactRouter"
  },
  "browserify": {
    "transform": [
      [
        "stringify",
        {
          "extensions": [
            ".md"
          ]
        }
      ],
      "babelify",
      "bulkify",
      "browserify-shim"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "postinstall": "mkdirp site/public/assets",
    "prerelease": "npm run all",
    "prestart": "npm run bootstrap",
    "site:css": "stylus -c -u autoprefixer-stylus site/style.styl -o site/public/style.css",
    "site:css:release": "npm run site:css && mv site/public/style.css site/public/assets/style.css",
    "site:css:watch": "stylus -w -c -m -l -u autoprefixer-stylus site/style.styl -o site/public/style.css --sourcemap-inline",
    "site:js:release": "BABEL_ENV=site-production NODE_ENV=production browserify site/index.js -p bundle-collapser/plugin | uglifyjs -mc drop_console --screw-ie8 > site/public/assets/bundle.min.js",
    "site:js:watch": "BABEL_ENV=site-development budo site/index.js:public/bundle.js -d site -H 0.0.0.0 --colors --live --open --pushstate --iw -- -p bundle-collapser/plugin",
    "site:release": "npm run site:css:release && npm run site:js:release && sed -e 's/bundle.js/bundle.min.js/g' -e 's/public/assets/g' < site/index.html > site/public/index.html",
    "site:deploy": "ansible-playbook deploy/playbook.yml -i deploy/inventory",
    "css": "stylus -m -u autoprefixer-stylus style.styl -o public/skin.css --sourcemap-inline",
    "css:release": "stylus -c -u autoprefixer-stylus style.styl -o public/skin.min.css",
    "css:watch": "npm run css -- -w",
    "build:master": "NODE_ENV=production node scripts/build-master.js",

    "lint": "eslint --quiet .",
    "test": "jest",
    "coverage": "jest --coverage",
    "start": "sh scripts/parallelize.sh \"npm run site:css:watch\" \"npm run site:js:watch\"",
    "all": "npm run css && npm run css:release && npm run build:master"
  }
}
