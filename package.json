{
  "name": "enigma-uikit",
  "description": "Intuitive, accessible solutions for common UI needs in React.",
  "private": true,
  "version": "1.0.1",
  "contributors": [
    "Evan Jacobs <evan.jacobs@enigma.io>",
    "Abe Rubenstein <abe.rubenstein@enigma.io>"
  ],
  "main": "public/uikit.commonjs.js",
  "dependencies": {
    "classnames": "^2.1.5",
    "escape-string-regexp": "^1.0.3",
    "lodash.isinteger": "^4.0.4"
  },
  "devDependencies": {
    "autoprefixer-stylus": "^0.11.0",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^16.0.0",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babelify": "^7.0.0",
    "brfs": "yaycmyk/brfs#enhancement/file-stream-transforms",
    "browserify": "^13.0.0",
    "budo": "^9.2.1",
    "bundle-collapser": "^1.2.1",
    "codecov": "^1.0.1",
    "coveralls": "^2.11.9",
    "eslint": "^3.7.0",
    "eslint-plugin-react": "^6.3.0",
    "exposify": "^0.5.0",
    "jest-cli": "^16.0.0",
    "lodash": "^4.6.1",
    "minami": "^1.1.1",
    "mkdirp": "^0.5.1",
    "prismjs": "^1.4.1",
    "react": "^15.3.0",
    "react-addons-test-utils": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-remarkable": "^1.1.1",
    "react-router": "^2.7.0",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "sinon": "^1.17.3",
    "stylus": "^0.54.2",
    "through": "^2.3.8",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "peerDependencies": {
    "react": ">= 15.3",
    "react-dom": ">= 15.3"
  },
  "jest": {
    "coverageReporters": [
      "text",
      "cobertura",
      "lcov"
    ]
  },
  "scripts": {
    "postinstall": "mkdirp site/public/assets",
    "lint": "eslint --quiet *.js **/*.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "site:css": "stylus -c -u autoprefixer-stylus site/style.styl -o site/public/style.css",
    "site:css:release": "npm run site:css && mv site/public/style.css site/public/assets/style.css",
    "site:css:watch": "stylus -w -c -m -l -u autoprefixer-stylus site/style.styl -o site/public/style.css --sourcemap-inline",
    "site:js:release": "NODE_ENV=production browserify site/index.js -t babelify -t [ brfs --transformer site/prepare.js ] | uglifyjs -mc drop_console --screw-ie8 > site/public/assets/bundle.min.js",
    "site:js:watch": "budo site/index.js:public/bundle.js -d site -H 0.0.0.0 --colors --live --open --pushstate --iw -- -t babelify -t [ brfs --transformer site/prepare.js ] -p bundle-collapser/plugin",
    "site:release": "npm run site:css:release && npm run site:js:release && sed -e 's/bundle.js/bundle.min.js/g' -e 's/public/assets/g' < site/index.html > site/public/index.html",
    "site:deploy": "ansible-playbook deploy/playbook.yml -i /etc/ansible/hosts",
    "start": "sh parallelize.sh \"npm run site:css:watch\" \"npm run site:js:watch\"",
    "css": "stylus -m -u autoprefixer-stylus style.styl -o public/skin.css --sourcemap-inline",
    "css:release": "stylus -c -u autoprefixer-stylus style.styl -o public/skin.min.css",
    "css:watch": "npm run css -- -w",
    "exclude_peer_deps": "echo $(node -p \"'-x ' + Object.keys(require('./package').peerDependencies).join(' -x ')\")",
    "js:standalone:dev": "NODE_ENV=production rollup -c rollup.config.js -g react:React,react-dom:ReactDOM > public/uikit.standalone.js",
    "js:standalone:release": "NODE_ENV=production rollup -c rollup.config.js -g react:React,react-dom:ReactDOM | uglifyjs -mc drop_console --screw-ie8 > public/uikit.standalone.min.js",
    "js:commonjs": "NODE_ENV=production rollup -c rollup.config.js --format cjs > public/uikit.commonjs.js",
    "all": "npm run css && npm run css:release && npm run js:standalone:dev && npm run js:standalone:release && npm run js:commonjs"
  }
}
