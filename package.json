{
  "name": "boundless",
  "description": "Intuitive, accessible solutions for common UI needs in React.",
  "version": "1.0.0-beta.4",
  "author": "Evan Scott <glitterbyte@gmail.com> (http://yaycmyk.com)",
  "contributors": [
    "Abe Rubenstein <abe.rubenstein@enigma.io>",
    "Jenn Creighton <jenn.creighton@enigma.io>"
  ],
  "license": "MIT",
  "main": "public/boundless.js",
  "dependencies": {
    "classnames": "^2.1.5"
  },
  "devDependencies": {
    "autoprefixer-stylus": "^0.13.0",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-react-docgen": "^1.4.1",
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.11",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "chalk": "^1.1.3",
    "codecov": "^1.0.1",
    "coveralls": "^2.11.9",
    "css-loader": "^0.26.1",
    "eslint": "^3.7.0",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "git-rev-sync": "^1.8.0",
    "html-webpack-plugin": "^2.26.0",
    "jest-cli": "^18.0.0",
    "lerna": "2.0.0-beta.32",
    "lodash": "^4.6.1",
    "markdown-to-jsx": "^4.0.0",
    "mkdirp": "^0.5.1",
    "raw-loader": "^0.5.1",
    "react": "^15.3.0",
    "react-addons-test-utils": "^15.3.0",
    "react-docgen": "^2.13.0",
    "react-dom": "^15.3.0",
    "react-router": "^2.0.0",
    "rollup": "^0.41.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.2",
    "stylus-loader": "^2.4.0",
    "uglify-js": "^2.6.2",
    "verbal-expressions": "^0.3.0",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  },
  "peerDependencies": {
    "react": ">= 15.3",
    "react-dom": ">= 15.3"
  },
  "jest": {
    "cacheDirectory": "node_modules/.cache/jest-cli",
    "coverageReporters": [
      "text",
      "cobertura",
      "lcov"
    ],
    "testRegex": "\\.spec\\.js$",
    "transformIgnorePatterns": [
      "/node_modules/(?!boundless).*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "site": "BABEL_ENV=site-production NODE_ENV=production webpack --config scripts/webpack.release.config.js",
    "build:js:master": "NODE_ENV=production node scripts/build-master.js",
    "build:js:packages": "NODE_ENV=production node scripts/build-packages.js",
    "build:css": "stylus -m -u autoprefixer-stylus style.styl -o public/skin.css --sourcemap-inline",
    "build:css:release": "stylus -c -u autoprefixer-stylus style.styl -o public/skin.min.css",
    "lint": "eslint --quiet .",
    "test": "jest",
    "coverage": "jest --coverage",
    "prestart": "npm i && npm run bootstrap",
    "start": "BABEL_ENV=site-development webpack-dev-server --config scripts/webpack.development.config.js --open --hot",
    "prerelease": "npm i && npm run bootstrap && rm -f docs/assets/*.js && rm -f docs/assets/*.css",
    "release": "npm run build:css && npm run build:css:release && npm run build:js:master && npm run build:js:packages && npm run site"
  }
}
