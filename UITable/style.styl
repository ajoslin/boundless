// Skin-specific styles go here. Demo-specific styles go in demo/style.styl.

@import "../_globals"

cell-color-base = color-accent
cell-height = 40px
cell-x-padding = 0.75em

track-size = 8px
track-size-expanded = 12px

.ui-table-wrapper,
.ui-table-wrapper * {
    box-sizing: border-box;
}

.ui-table-wrapper {
    overflow: hidden;
    position: relative;
    height: 500px;
    width: 100%;
    transform: translateZ(0);
}

.ui-table {
    border-spacing: 0;
    text-align: left;
    white-space: nowrap;
}

.ui-table-header {
    position: relative;
    z-index: 1;
}

.ui-table-body {
    position: absolute;
    top: cell-height;
    bottom: 0;
    backface-visibility: hidden;
    transform: translate3d(0, 0, 0);
    will-change: transform;
}

.ui-table-row,
.ui-table-cell {
    height: cell-height;
    line-height: cell-height;
}

.ui-table-row {
    position: absolute;
    top: 0;
    left: 0;
    backface-visibility: hidden;
    transform: translate3d(0, 0, 0);
    overflow: hidden;
    will-change: transform;
}

.ui-table-row-even {
    background: #fff;
}

.ui-table-row-odd {
    background: rgba(cell-color-base, 0.075);
}

.ui-table-row-loading::before {
   content: '';
   position: absolute;
   top: 50%;
   margin-top: -1px;
   left: 0;
   height: 2px;
   width: 100%;
   background-color: #BBB;
}

.ui-table-row-loading::before {
    animation: indeterminate 2s linear infinite;
}

@keyframes indeterminate {
  0% {transform: translateX(-100%) scaleX(0.2) }
  20% {transform: translateX(-40%) scaleX(0.2) }
  30% {transform: translateX(0%) scaleX(0.5) }
  55% {transform: translateX(100%) scaleX(0.7) }
  55.99% {transform: scaleX(0) }
  56% {transform: translateX(-100%) scaleX(0) }
  56.99% {transform: translateX(-100%) scaleX(0.6) }
  75% {transform: translateX(-5%) scaleX(0.6) }
  85% {transform: translateX(30%) scaleX(0.3) }
  98% {transform: translateX(100%) scaleX(0.2)}
  99.99% {transform: scaleX(0) }
  100% {transform: translateX(-100%)}
}

.ui-table-row-active {
    background: rgba(cell-color-base, 0.25);
}

.ui-table-cell {
    display: inline-block;
    vertical-align: top;
    min-width: 75px;
    padding: 0 cell-x-padding;
    position: relative;
    user-select: none;
    will-change: contents;
}

.ui-table-cell-inner {
    position: absolute;
    top: 0;
    left: cell-x-padding;
    right: cell-x-padding;
    overflow: hidden;
    text-overflow: ellipsis;
    will-change: contents;
}

.ui-table-header-cell {
    background: #333;
    color: #FFF;
}

.ui-table-header-cell .ui-table-cell-inner {
    right: cell-x-padding + 0.5em;
}

.ui-table-header-cell:hover .ui-table-header-cell-resize-handle {
    opacity: 1;
}

.ui-table-header-cell-resize-handle {
    border-right: 2px dotted #FFF;
    cursor: col-resize;
    opacity: 0;
    position: absolute;
    top: 5px;
    bottom: 5px;
    right: 5px;
    width: 5px;
    transition: opacity 200ms ease;
}

.ui-table-x-scroll-track,
.ui-table-y-scroll-track {
    background: #CCC;
    cursor: move;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transition-duration: 200ms;
    transition-timing: ease;
    z-index: 2;
}

.ui-table-x-scroll-track {
    height: track-size;
    margin-right: track-size;
    top: auto;
    transition-property: height;
}

.ui-table-x-scroll-track:hover {
    height: track-size-expanded;
}

.ui-table-y-scroll-track {
    width: track-size;
    left: auto;
    transition-property: width;
}

.ui-table-y-scroll-track:hover {
    width: track-size-expanded;
}

.ui-table-x-scroll-handle,
.ui-table-y-scroll-handle {
    backface-visibility: hidden;
    background-color: black;
    position: absolute;
}

.ui-table-x-scroll-handle {
    top: 0;
    bottom: 0;
}

.ui-table-y-scroll-handle {
    left: 0;
    right: 0;
}
