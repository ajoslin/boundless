// Skin-specific styles go here. Demo-specific styles go in demo/style.styl.

.ui-button {
    appearance: none;
    background: transparent;
    border: 1px solid color-text-body;
    border-radius: default-border-radius;
    color: color-text-body;
    cursor: pointer;
    font-size: 14px;
    margin: 0;
    overflow: hidden;
    padding: 0.5rem 0.75rem;
    vertical-align: middle;
    white-space: nowrap;

    transition: all 200ms ease;
}

.ui-button[disabled] {
    border-color: color-text-body !important;
    color: color-text-body !important;
    cursor: not-allowed;
    opacity: 0.3;
}

.ui-button:hover,
.ui-button:focus {
    border-color: color-accent;
    color: color-accent;
}

.ui-button:active,
.ui-button.ui-button-pressed {
    background: color-accent;
    color: #FFF;
}

.ui-button + .ui-button {
    margin-left: 15px;
}

.ui-button-pressable {
    width: 100px;
}
