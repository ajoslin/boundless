@import "../style.styl"
@import "../packages/*/demo/*.styl"
@import "stars"
@import "syntax_highlighter"

@font-face {
    font-family: 'Lab Grotesque';
    font-weight: 700;
    src: url('/assets/fonts/lab-grotesque/LabGrotesque-Bold.woff2') format('woff2');
    src: url('/assets/fonts/lab-grotesque/LabGrotesque-Bold.woff') format('woff');
}

@font-face {
    font-family: 'Lab Grotesque';
    font-weight: 500;
    src: url('/assets/fonts/lab-grotesque/LabGrotesque-Medium.woff2') format('woff2');
    src: url('/assets/fonts/lab-grotesque/LabGrotesque-Medium.woff') format('woff');
}

@font-face {
    font-family: 'Lab Grotesque';
    font-weight: 400;
    src: url('/assets/fonts/lab-grotesque/LabGrotesque-Regular.woff2') format('woff2');
    src: url('/assets/fonts/lab-grotesque/LabGrotesque-Regular.woff') format('woff');
}

@font-face {
    font-family: 'Lab Grotesque';
    font-style: italic;
    font-weight: 400;
    src: url('/assets/fonts/lab-grotesque/LabGrotesque-Italic.woff2') format('woff2');
    src: url('/assets/fonts/lab-grotesque/LabGrotesque-Italic.woff') format('woff');
}

@font-face {
    font-family: 'Lab Grotesque';
    font-weight: 300;
    src: url('/assets/fonts/lab-grotesque/LabGrotesque-Light.woff2') format('woff2');
    src: url('/assets/fonts/lab-grotesque/LabGrotesque-Light.woff') format('woff');
}

*:last-child {
    margin-bottom: 0;
}

html {
    font-family: 'Lab Grotesque', Helvetica Neue, Helvetica, sans-serif;
    font-size: 16px;
}

body {
    background: #272b33;
    color: #c5cfdb;
    line-height: 1.4;
    overflow-x: hidden;
    margin: 0;
    padding: 0;
}

main {
    display: flex;
}

article {
    flex-shrink: 1;
    overflow: hidden;
    padding: 33px;
}

aside {
    background: #535a66;
    color: #c5cfdb;
    flex-shrink: 0;
    min-width: 360px;
    padding: 24px;

    nav {
        font-size: 14px;
        line-height: 26px;
        margin-top: 20px;

        h4 {
            color: #FFF;
            font-size: inherit;
            font-weight: 400;
            line-height: 36px;
            margin: 0;
        }

        a {
            color: inherit;
            display: inline-block;
            float: left;
            clear: both;
            margin-left: 10px;
            text-decoration: none;

            &:hover {
                color: #FFF;
            }

            &.active {
                color: #FFF;
            }
        }
    }
}

figure {
    margin: 0;
}

h1, h2, h3 {
    color: #FFF;
    margin: 1em 0 0.75rem;

    > a {
        color: #CCC;
        font-weight: 400;
        margin-left: 0.5rem;
        opacity: 0;
        text-decoration: none;
    }

    &:hover > a {
        opacity: 1;
    }

    + h1, + h2, + h3 {
        margin-top: 0.5rem;
    }

    &:hover .anchor,
    &:focus .anchor,
    .anchor:focus,
    .anchor:hover {
        opacity: 1;
    }

    .anchor {
        margin-left: 5px;
        opacity: 0;
        text-decoration: none;
        transition: opacity 200ms ease-in-out;

        &::before {
            content: '#';
        }
    }

    &:first-child {
        margin-top: 0;
    }
}

h1 {
    font-size: 27px;
    font-weight: 300;
}

h2 {
    font-size: 18px;
}

h3 {
    font-size: 12px;
    font-weight: 400;
    margin-top: 3rem;
    text-transform: uppercase;
}

a {
    color: #FFF;
}

strong {
    color: #FFF;
}

p {
    margin: 0 0 1em;
}

ol ol {
    margin-top: 0.5rem;
}

ol li {
    margin-bottom: 0.5rem;
}

ul li {
    margin-bottom: 1rem;
}

li {
    &:last-child {
        margin-bottom: 0;
    }

    > p:last-child {
        margin-bottom: 0;
    }
}

li > strong + code::after {
    content: '';
    display: block;
}

li > p + pre code,
li > p + code {
    margin-top: 0;
}

li > p + ul,
li > p + ol {
    margin-top: -1em;
    padding-left: 0;

    li {
        list-style-type: none;
    }
}

li > pre,
li > code {
    margin: 0;

    + p {
        margin-top: 1em;
    }
}

li :not(pre) > code {
    display: inline-block;
}

hr {
    border: 0;
    border-top: 1px solid #CCC;
    margin: 2rem -2rem;
}

blockquote {
    border-left: 3px solid #3d8feb;
    font-size: 14px;
    font-style: italic;
    margin: 0 0 1rem;
    padding-left: 1rem;

    > ul,
    > ol {
        list-style-position: inside;
        margin-left: 0;
        padding-left: 0;
    }
}

table {
    text-align: left;
    width: 100%;
}

th {
    font-weight: 400;
    padding: 0.5em;
    white-space: nowrap;
}

pre {
    overflow-x: auto;
    margin: 1rem 0;
    padding: 0;

    > code {
        background: transparent;
        display: block;
        font-size: 0.8em;
        line-height: 1.5;
        padding: 0.75rem 1.5rem;
    }
}

code {
    background: #303946;
    display: inline-block;
    font-size: 0.9em;
    margin-bottom: 0;
    padding: 0.1em 0.5em;
    text-decoration: inherit;
}

ul, ol, table, figure {
    margin-bottom: 2rem;
}

ul {
    padding-left: 1.3em;
}

ol {
    padding-left: 1.5em;
}

th, td {
    padding: 1rem;
}

tbody td {
    min-width: 100px;
}

::selection {
    background-color: invert(color-accent);
}

.splash {
    align-items: center;
    background: linear-gradient(to top, #1A1A1A 0%, #000 100%)
    height: 100vh;
    overflow: hidden; /* needed for starfield */
    position: relative;

    .splash-overlay {
        align-items: center;
        color: #f5f5f5;
        display: flex;
        flex-direction: column;
        height: 100vh;
        justify-content: space-between;
        width: 100vw;
        position: absolute;
        top: 0;

        .splash-tab {
            background: #fcfcfc;
            color: #111;
            padding: 15px 30px;
            text-align: center;

            &.splash-tab-upper {
                border-radius: 0 0 3px 3px;

                a {
                    text-decoration: none;
                    color: inherit;
                    font-weight: bold;
                }
            }

            &.splash-tab-lower {
                border-radius: 3px 3px 0 0;
                background: transparent;
                cursor: pointer;

                svg {
                    height: 50px;
                    width: 50px;
                    fill: #f5f5f5;
                }
            }
        }

        .splash-inner {
            text-align: center;

            h1 {
                font-size: 72px;
                font-weight: 700;
            }

            p {
                font-size: 24px;
                font-weight: 300;
            }
        }
    }
}

.sticky-bar {
    align-items: center;
    background: #3f454e;
    color: #979fa8;
    display: flex;
    height: 42px;
    padding: 0 30px;
    position: sticky;
    top: 0;
    z-index: 2;

    .sticky-bar-inner {
        align-items: center;
        display: flex;
        width: 100%;
        position: relative;
        z-index: 1;

        .sticky-bar-brand {
            color: #f5f5f5;
            display: inline-block;
            line-height:1;
            font-size: 26px;
            font-weight: bold;
            margin-right: 30px;
            text-decoration: none;

            &:hover {
                opacity: 0.5;
            }
        }

        .sticky-bar-menu-button {
            background: inherit;
            border: none;
            color: #f5f5f5;
            flex-shrink: 0;
            font-size: 16px;
            line-height: 1;
            outline: 0;
            width: auto;

            &:active,
            &:hover,
            &:focus {
                background: inherit;
                color: #f5f5f5;
            }

            &:active, &:hover {opacity: 0.5;}

            .sticky-bar-menu-button-inner {
                align-items: center;
                display: flex;

                svg {
                    margin-left: 3px;
                    height: 18px;
                    width: 18px;
                    fill: #f5f5f5;
                }
            }
        }
    }
}

.sticky-bar-menu {
    border-radius: 0 0 3px 3px;
    border-top: none;

    .b-dialog {
        max-height: 300px;
        overflow-y: auto;
    }

    .b-popover-caret {
        display: none;
    }

    a {
        display: block;
        color: #111;
        text-decoration: none;

        &:hover {
            cursor: pointer;
            opacity: 0.5;
        }
    }
}

.search {
    flex-grow: 1;

    .b-input-placeholder {
        background: #3f454e;
        color: #fff;
    }

    .b-input {
        border: 0;
        color: #fff;
        font-size: 14px;
        line-height: 1em;
        padding: ((42px - 14px) / 2) 17px;
        height: 42px;

        &:focus {
            outline: 0;
        }
    }
}

.b-popover-caret {
    display: none;
}

