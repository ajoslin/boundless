article {
    pre {
        background: transparent;
        margin-top: 0;

        code {
            background: transparent;
            font-size: inherit;
        }
    }

    table {
        border-collapse: collapse;
        overflow: hidden;

        thead tr {
            border-bottom: 4px solid #3f454e;
        }

        tr:nth-child(n+2) {
            border-top: 1px solid #3f454e;
        }

        tbody td {
            vertical-align: top;
        }
    }

    .prop-row {
        &.prop-depth-1 {
            border-top-color: rgba(#303946, 0.75);

            td {
                font-size: 15px;

                &:first-child {
                    padding-left: 25px;

                    &::before {
                        content: '↳';
                        display: inline-block;
                        margin-right: 1em;
                    }
                }
            }
        }

        &.prop-depth-2 {
            border-top-color: rgba(#303946, 0.5);

            td {
                font-size: 14px;

                &:first-child {
                    padding-left: 55px;

                    &::before {
                        content: '↳';
                        display: inline-block;
                        margin-right: 1em;
                    }
                }
            }
        }
    }

    .prop-type code {
        color: #FFF;
    }

    .prop-name {
        max-width: 400px;

        h5 {
            font-size: 10px;
            font-weight: 400;
            margin-bottom: 0.5em;
            text-transform: uppercase;
        }

        h5:first-of-type {
            margin-top: 0;
        }

        pre {
            background: none;
            margin: 0;

            code {
                background: none;
                padding: 0;
            }
        }
    }
}

.spread {
    display: flex;
    align-items: flex-start;
}

.spread > * {
    flex: 100% 1 1;
}

.align-end {
    align-items: flex-end;
}

.center {
    text-align: center;
}
