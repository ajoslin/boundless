// Skin-specific styles go here. Demo-specific styles go in demo/style.styl.

.ui-typeahead-wrapper {
    font-size: input-font-size;
    position: relative;
}

.ui-typeahead,
.ui-typeahead-hint {
    background: #FFF;
    border: 1px solid #333;
    border-radius: default-border-radius;
    padding: 0.75em;
    width: 100%;
}

.ui-typeahead-hint + .ui-typeahead {
    background: transparent;
}

.ui-typeahead {
    position: relative;
    z-index: 1;

    transition: border-color 200ms ease;
}

.ui-typeahead:hover,
.ui-typeahead:focus {
    border-color: color-accent;
}

.ui-typeahead-hint {
    border-color: transparent;
    color: gray;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
}

.ui-typeahead-match-wrapper {
    background: #FFF;
    border-bottom-left-radius: default-border-radius;
    border-bottom-right-radius: default-border-radius;
    box-shadow: 0 0 0 1px #CCC inset;
    margin-top: -1px;
    max-height: 300px;
    overflow: hidden;
    overflow-y: auto;
    position: absolute;
    left: 0;
    right: 0;
    top: 100%;
    z-index: 99;
}

.ui-typeahead-match {
    cursor: pointer;
    font-size: 13px;
    line-height: 1;
    padding: 0.25em 0.5em;
}

.ui-typeahead-match:hover {
    background-color: rgba(color-accent, 0.2);
}

.ui-typeahead-match-selected,
.ui-typeahead-match-selected:hover {
    background-color: rgba(color-accent, 0.9);
    color: #FFF;
}

.ui-typeahead-match-highlight {
    background-color: rgba(0, 0, 0, 0.15);
}

.ui-typeahead-match-selected .ui-typeahead-match-highlight {
    background-color: rgba(0, 0, 0, 0.3);
    color: #FFF;
}
