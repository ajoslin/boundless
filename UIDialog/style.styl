// Skin-specific styles go here. Demo-specific styles go in demo/style.styl.

.ui-dialog {
    background: background-UIDialog;
    border: 1px solid borderColor-UIDialog;
    border-radius: borderRadius;
    box-shadow: 1px 2px 3px boxShadowColor-UIDialog;
    padding: 1.5em;
    position: absolute;
    z-index: 9999;
}

.ui-dialog-header {
    text-transform: uppercase;
    font-weight: 700;
}

.ui-dialog-body {
    line-height: 1.5;
    padding: 1em 0;
}

.ui-dialog-footer {
    text-align: right;
}

.ui-dialog *:last-child {
    margin-bottom: 0;
}
