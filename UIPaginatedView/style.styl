// Skin-specific styles go here. Demo-specific styles go in demo/style.styl.

.ui-paginated-view-controls .ui-segmented-control-option {
    background: background-UIPaginatedView_control;
    border-color: borderColor-UIPaginatedView_control;
    color: color-UIPaginatedView_control;
}

.ui-paginated-view-controls .ui-segmented-control-option:not(.ui-segmented-control-option-selected):focus {
    background: background-UIPaginatedView_control-focus;
    color: color-UIPaginatedView_control-focus;
}

.ui-paginated-view-controls .ui-segmented-control-option-selected {
    background: background-UIPaginatedView_control-selected;
    color: color-UIPaginatedView_control-selected;
}

.ui-paginated-view .ui-paginated-view-item {
    display: flex;
}

.ui-paginated-view .ui-paginated-view-item:after {
    content: none;
}

.ui-paginated-view-item-loading {
    position: relative;
}

.ui-paginated-view-item-loading::before,
.ui-paginated-view-item-loading::after {
    content: '';
    position: absolute;
    top: 50%;
    margin-top: -5px;
    left: 50%;
    margin-left: -5px;
    height: 10px;
    width: 10px;
    border-radius: 100%;
    background: background-UIPaginatedView_item-loading;
}

.ui-paginated-view-item-loading::before {
    animation: loaderBefore 0.7s ease-in-out alternate infinite;
}

.ui-paginated-view-item-loading::after {
    animation: loaderAfter 0.7s ease-in-out alternate infinite;
}

@keyframes loaderBefore {
    from {
        left: 50%;
    }

    to {
        left: 49%;
    }
}

@keyframes loaderAfter {
    from {
        left: 50%;
    }

    to {
        left: 51%;
    }
}
